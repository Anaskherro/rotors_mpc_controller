<launch>

  <!-- Include the MAV simulation (Hummingbird) -->
  <include file="$(find rotors_gazebo)/launch/mav.launch">
    <arg name="mav_name" value="hummingbird" />
  </include>
  <!-- includ rviz with config file-->
  <node pkg="rotors_mpc_controller"
        type="mpc_controller_node"
        name="mpc_controller_node"
        output="screen" />
  <node pkg="rotors_mpc_controller" 
        type="path_publisher_node"
        name="path_publisher_node"
        output="screen" />
  <node pkg="rviz" 
        type="rviz" 
        name="rviz" 
        args="-d $(find rotors_mpc_controller)/config/rotors_mpc.rviz" />
  <node pkg="rqt_gui" 
        type="rqt_gui" 
        name="rqt_gui" 
        args="--perspective-file $(find rotors_mpc_controller)/config/control.perspective"/>
</launch>
